#ifndef _METALLIC_BITS_ATTRIBUTES
#define _METALLIC_BITS_ATTRIBUTES

#if __cplusplus >= 201103L
#define _METALLIC_CONST constexpr
#else
#define _METALLIC_CONST const
#endif

#if __cplusplus >= 201103L
#define _METALLIC_CONSTEXPR constexpr
#else
#define _METALLIC_CONSTEXPR
#endif

#if __cplusplus >= 201103L
#define _METALLIC_NOEXCEPT noexcept
#else
#define _METALLIC_NOEXCEPT
#endif

#if __cplusplus > 201402L
#define _METALLIC_INLINE_VAR inline
#else
#define _METALLIC_INLINE_VAR
#endif

#endif // <bits/attributes>

